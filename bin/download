#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"

archive_file="$ASDF_DOWNLOAD_PATH/$(get_release_filename "$ASDF_INSTALL_VERSION")"

download_release "$ASDF_INSTALL_VERSION" "$archive_file"

tar -xzf "$archive_file" -C "$ASDF_DOWNLOAD_PATH" || fail "Could not extract $archive_file"

rm -f "$archive_file"
